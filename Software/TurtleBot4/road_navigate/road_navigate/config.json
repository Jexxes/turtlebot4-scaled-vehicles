{
    "globalLogger": "defaultLogger",
    "tf_buffer": {
        "cache_time_seconds": 60
    },
    "topics": {
        "published": "/myRoad",
        "pointCloud": "/oakd/points"
    },
    "frames": {
        "robot_base": "base_link",
        "robot_map": "map"
    },
    "mapServer": {
        "timePeriod": 0.1
    },
    "mapHandler": {
        "map_resolution": 0.035,
        "initial_map_width": 12,
        "initial_map_height": 7,
        "road_intensity_threshold": 180
    },
    "pointCloudPostProcessor": {
        "parameters": [1.3, 0.6]
    },
    "localMapHandler": {
        "parameters": [2.0]
    },
    "post_processing": {
        "post_processor_type": "GaussianBlur",
        "kernel_size": 3
    },
    "publisher": {
        "map_publish_rate": 1.0,
        "map_topic_names": {
            "global": "/hermes/map",
            "local": "/hermes/local_map",
            "position_centered": "/hermes/position_centered_map" 
        }
    }
}